# Environment Configuration for Newspaper Explorer
# Copy this file to .env and customize as needed

# Data directory settings
DATA_DIR=data
DOWNLOAD_DIR=data/downloads
EXTRACTED_DIR=data/extracted
SOURCES_DIR=data/sources
RESULTS_DIR=results

# Optional: Custom paths (uncomment to override defaults)
# DATA_DIR=/path/to/custom/data
# DOWNLOAD_DIR=/path/to/custom/downloads
# EXTRACTED_DIR=/path/to/custom/extracted
# RESULTS_DIR=/path/to/custom/results

# Logging
LOG_LEVEL=INFO

# LLM API Configuration
# Base URL for OpenAI-compatible API endpoint
LLM_BASE_URL=https://api.openai.com/v1

# API authentication key
LLM_API_KEY=your_api_key_here

# Model settings (optional, with defaults)
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
